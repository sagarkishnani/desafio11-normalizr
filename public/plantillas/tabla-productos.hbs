<style>
  .table td, .table th { vertical-align: middle; }
</style>

{{#if productos.length}}
  <h2>Lista de Productos</h2>
  <div class="table-responsive">
    <table class="table table-dark">
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
      </tr>
      {{#each productos}}
        <tr>
          <td>{{this.nombre}}</td>
          <td>${{this.precio}}</td>
          <td><img width="50" src={{this.foto}} alt="not found" /></td>
        </tr>
      {{/each}}
    </table>
  </div>
{{/if}}